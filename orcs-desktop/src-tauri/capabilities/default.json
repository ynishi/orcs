{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" },
        { "path": "$HOME/Library/Application Support/orcs/**" },
        { "path": "$HOME/.config/orcs/**" },
        { "path": "$HOME/.local/share/orcs/**" },
        { "path": "$HOME/.orcs/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" },
        { "path": "$HOME/Library/Application Support/orcs/**" },
        { "path": "$HOME/.config/orcs/**" },
        { "path": "$HOME/.local/share/orcs/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" },
        { "path": "$HOME/Library/Application Support/orcs/**" },
        { "path": "$HOME/.config/orcs/**" },
        { "path": "$HOME/.local/share/orcs/**" }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" },
        { "path": "$HOME/Library/Application Support/orcs/**" },
        { "path": "$HOME/.config/orcs/**" },
        { "path": "$HOME/.local/share/orcs/**" }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" },
        { "path": "$HOME/Library/Application Support/orcs/**" },
        { "path": "$HOME/.config/orcs/**" },
        { "path": "$HOME/.local/share/orcs/**" }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" },
        { "path": "$HOME/Library/Application Support/orcs/**" },
        { "path": "$HOME/.config/orcs/**" },
        { "path": "$HOME/.local/share/orcs/**" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$APPCONFIG/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCALDATA/**" },
        { "path": "$HOME/Library/Application Support/orcs/**" },
        { "path": "$HOME/.config/orcs/**" },
        { "path": "$HOME/.local/share/orcs/**" }
      ]
    }
  ]
}
